<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upsell_gallery_layout"
    style="@style/layoutfillparent"
    android:orientation="vertical"
    android:background="@color/style_dark_title_bg">
    
    <include layout="@layout/common_title" />

    <ImageView
        android:id="@+id/screensplitline"
        android:layout_width="fill_parent"
        android:layout_height="13dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
	
	<LinearLayout
    	android:orientation="vertical"
    	style="@style/layoutfillparent"> 
			<com.telenav.ui.android.OneStepGallery
				android:id="@+id/upsell_learn_gallery"
				android:layout_height = "0dp"
				android:layout_weight="604"
				android:layout_width="fill_parent"
				style="@style/layoutcenter"/>
		    <com.telenav.ui.android.ImageIndicator
		        android:id="@+id/upsell_learn_imageindexer"
		        android:layout_width="200dp"
		        android:layout_height="10dp"
		        style="@style/layoutcenter"  />
		    <View
		        style="@style/weightbyheight"
		        android:layout_weight="26" />
			<LinearLayout
    			android:orientation="vertical"
    			android:paddingLeft="21dp"
				android:paddingRight="21dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"> 
			<Button
				        android:id="@+id/upgrade_now"
				        style="@style/ftuebtn"
				        android:layout_width="fill_parent" />
			</LinearLayout>
		    <View
		        style="@style/weightbyheight"
		        android:layout_weight="46" />
     </LinearLayout>
</LinearLayout>