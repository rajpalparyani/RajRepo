<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard0titleContainer_landscape"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginRight="11dp"
    android:layout_marginLeft="11dp"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@string/dashboard0TitleOneboxLayoutWeight"
        android:layout_marginTop="11dp" >
        <include layout="@layout/common_onebox_landscape" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/dashboard0TitlePersonalContainer_landscape"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        >
        
        <ImageView
	        android:id="@+id/dashboard0TitlePersonalButton_landscape"
	        android:layout_width="33dp"
	        android:layout_height="33dp"
	        android:layout_marginTop="11dp"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="21dp"
	        android:layout_marginRight="21dp"
	        android:clickable="true"
	        android:contentDescription="@string/dashboardPersonalTip"
	        android:onClick="onClick"
	        android:src="@drawable/dashboard_contact_icon_unfocused" />
        
        <TextView 
            android:id="@+id/dashboard0TitlePersonalBadge_landscape"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:paddingTop="0dp"
	        android:paddingBottom="0dp"
            android:gravity="center"
            android:text="@string/dashboardBadgeNumber"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/profile_red_badge_unfocused"
            android:visibility="visible"
            />
    </RelativeLayout>

    <LinearLayout 
         android:layout_width="37dp"
         android:layout_height="44dp"
         android:orientation="vertical"
         android:id="@+id/dashboard0TitleFavoriteContainer_landscape"
        >
        
        <View 
            android:layout_width="match_parent"
         	android:layout_height="11dp"
            />
        
        <ImageView
	        android:id="@+id/dashboard0TitleFavoriteButton_landscape"
	        android:layout_width="37dp"
	        android:layout_height="33dp"
	        android:layout_gravity="center_vertical"
	        android:clickable="true"
	        android:contentDescription="@string/dashboardFavoriteTip"
	        android:onClick="onClick"
	        android:src="@drawable/dashboard_my_places_icon_unfocused" />
    </LinearLayout>
    

</LinearLayout>