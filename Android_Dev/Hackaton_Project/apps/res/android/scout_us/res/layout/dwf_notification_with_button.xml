<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:padding="13dp">

    <ImageView
        android:id="@+id/dwf0NotificationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_icon" 
        android:layout_marginRight="13dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dwf0NotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dwfNotificationTitle"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dwf0NotificationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dwfNotificationContent"
            android:textColor="#ffebebeb"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dwf0NotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/switch_on_unfocused"
        android:layout_gravity="right"
        android:clickable="true" />

</LinearLayout>