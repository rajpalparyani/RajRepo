<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/share0ListItemMinHeight"
    android:orientation="horizontal"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:background="@drawable/common_list_background" >

    <!-- Activity icon when presenting dialog -->

    <ImageView
        android:id="@+id/share0ActivityIcon"
        android:layout_width="@dimen/share0AppIconSize"
        android:layout_height="@dimen/share0AppIconSize"
        android:scaleType="fitCenter" />

    <!-- Activity name -->

    <TextView
        android:id="@+id/share0ActivityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingLeft="16dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/share0Text" />

</LinearLayout>