                    android:text="@string/dashboardPlaceAtm"
                    android:textColor="@color/dashboard_places_font"
                    android:textSize="@dimen/dashboard0PlaceTextSize"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        -->

        <LinearLayout
            android:id="@+id/dashboard0PlaceMoreButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dashboard_button_background_right"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dashboard0PlacesMoreImage"
                android:layout_width="@dimen/dashboard0PlaceImageLayoutWidth"
                android:layout_height="@dimen/dashboard0PlaceImageLayoutHeight"
                android:contentDescription="@string/dashboardPlaceMore"
                android:duplicateParentState="true"
                android:src="@drawable/dashboard_poi_icon_more" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/dashboardPlaceMore"
                android:textColor="@color/dashboard_places_font"
                android:textSize="@dimen/dashboard0PlaceTextSize"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/dashboard0DriveLinearLayoutLayoutMargin"
        android:layout_height="@dimen/dashboard0DriveLinearLayoutLayoutMargin" />

    <RelativeLayout
        android:id="@+id/dashboard0DriveDWFButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dashboard_button_recent_background"
        android:clickable="true"
        android:onClick="onClick" >

        <ImageView
            android:id="@+id/dashboard0DriveDWFActiveIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/dashboardRecents"
            android:duplicateParentState="true"
            android:src="@drawable/dashboard_drive_with_friends_active_point_icon_unfocused"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:duplicateParentState="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dashboard0DriveDWFImage"
                android:layout_width="@dimen/dashboard0PlaceImageLayoutWidth"
                android:layout_height="@dimen/dashboard0DriveDWFButtonImageLayoutHeight"
                android:contentDescription="@string/dashboardRecents"
                android:duplicateParentState="true"
                android:src="@drawable/dashboard_dwf_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:text="@string/dashboardDriveWithFriends"
                android:textColor="@color/dashboard_places_font"
                android:textSize="@dimen/dashboard0PlaceTextSize"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>