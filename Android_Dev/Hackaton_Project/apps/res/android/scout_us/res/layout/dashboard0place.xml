<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard0placeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/dashboard0DriveLinearLayoutLayoutMargin"
    android:layout_marginRight="@dimen/dashboard0DriveLinearLayoutLayoutMargin"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.6"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dashboard0PlaceCoffeeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dashboard_button_background_left"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:tag="241" >

            <ImageView
                android:id="@+id/dashboard0PlacesCoffeeImage"
                android:layout_width="@dimen/dashboard0PlaceImageLayoutWidth"
                android:layout_height="@dimen/dashboard0PlaceImageLayoutHeight"
                android:contentDescription="@string/dashboardPlaceCoffee"
                android:duplicateParentState="true"
                android:src="@drawable/dashboard_poi_icon_coffee" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/dashboardPlaceCoffee"
                android:textColor="@color/dashboard_places_font"
                android:textSize="@dimen/dashboard0PlaceTextSize"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard0PlaceFoodButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dashboard_button_background_center"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:tag="2041" >

            <ImageView
                android:id="@+id/dashboard0PlacesFoodImage"
                android:layout_width="@dimen/dashboard0PlaceImageLayoutWidth"
                android:layout_height="@dimen/dashboard0PlaceImageLayoutHeight"
                android:contentDescription="@string/dashboardPlaceFood"
                android:duplicateParentState="true"
                android:src="@drawable/dashboard_poi_icon_food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/dashboardPlaceFood"
                android:textColor="@color/dashboard_places_font"
                android:textSize="@dimen/dashboard0PlaceTextSize"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard0PlaceGasButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dashboard_button_background_center"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:tag="702" >

            <ImageView
                android:id="@+id/dashboard0PlacesGasImage"
                android:layout_width="@dimen/dashboard0PlaceImageLayoutWidth"
                android:layout_height="@dimen/dashboard0PlaceImageLayoutHeight"
                android:contentDescription="@string/dashboardPlaceGas"
                android:duplicateParentState="true"
                android:src="@drawable/dashboard_poi_icon_gas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/dashboardPlaceGas"
                android:textColor="@color/dashboard_places_font"
                android:textSize="@dimen/dashboard0PlaceTextSize"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
