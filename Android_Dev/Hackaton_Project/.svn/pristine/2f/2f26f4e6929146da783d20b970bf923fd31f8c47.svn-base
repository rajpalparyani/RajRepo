<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="1" >

    <Button
        android:id="@+id/mapDownloadTab"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="0dp"
        style="@style/TextApperance.MapDownloadManager.Tab" />

    <View
        android:id="@+id/mapDownloadTabComplete"
        android:visibility="gone"
        android:layout_width="@dimen/complete_icon_size"
        android:layout_height="@dimen/complete_icon_size"
        android:layout_gravity="right|bottom" />

</FrameLayout>