<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7" >

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp" 
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/mapDownload0Hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:textAppearance="@style/TextApperance.MapDownloadManager" />

            <LinearLayout
                android:id="@+id/mapDownload0TabContainer"
                android:layout_width="fill_parent"
                android:layout_height="51dp"
                android:baselineAligned="false"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/map_download_bg_unfocused"
                android:orientation="vertical"
                android:paddingTop="13dp">

                <View
                    android:id="@+id/mapDownload0Map"
                    android:layout_width="188dp"
                    android:layout_height="127dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/mapDownload0Description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@style/TextApperance.MapDownloadManager" />

                <TextView
                    android:id="@+id/mapDownload0Size"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextApperance.MapDownloadManager" />
            </LinearLayout>

            <LinearLayout 
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginTop="25dp"
            	>
                
                <RelativeLayout
                    android:id="@+id/mapDownload0BtnOne"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="@dimen/common_margin"
                    android:gravity="center" >
					
                    <ImageView
                        android:id="@+id/mapDownload0tTopButtonImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_map_download_icon_unfocused"
                        android:layout_marginRight="10dp"
                        />
                    
                    <TextView
                        android:id="@+id/mapDownload0TopButtonTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextApperance.MapDownloadManager.Button"
                        android:layout_toRightOf="@id/mapDownload0tTopButtonImageView" />
                </RelativeLayout>
	
	            <Button
	                android:id="@+id/mapDownload0BtnTwo"
	                android:layout_width="fill_parent"
	                android:layout_height="43dp"
	                android:layout_marginBottom="@dimen/common_margin"
	                android:textAppearance="@style/TextApperance.MapDownloadManager.Button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>