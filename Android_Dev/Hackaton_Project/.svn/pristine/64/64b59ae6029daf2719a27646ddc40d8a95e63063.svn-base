<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentlayout"
    style="@style/layoutfillparent"
    android:orientation="vertical" >
    
    <View
        style="@style/weightbyheight"
        android:layout_weight="46" />

    <com.telenav.ui.android.OneStepGallery
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="400"
        style="@style/layoutcenter"/>

    <View
        style="@style/weightbyheight"
        android:layout_weight="15" />

    <com.telenav.ui.android.ImageIndicator
        android:id="@+id/imageindexer"
        android:layout_width="200dp"
        android:layout_height="10dp"
        style="@style/layoutcenter"  />

    <View
        style="@style/weightbyheight"
        android:layout_weight="60" />

    <Button
        android:id="@+id/createaccout"
        style="@style/ftuebtn"
        android:layout_width="fill_parent" />

    <View
        style="@style/weightbyheight"
        android:layout_weight="40" />

    <Button
        android:id="@+id/login"
        style="@style/ftuebtn"
        android:layout_width="fill_parent" />

    <View
        style="@style/weightbyheight"
        android:layout_weight="25" />

    <TextView
        android:id="@+id/later"
        style="@style/ftuelink"
        android:padding="10dp" />

    <View
       style="@style/weightbyheight"
        android:layout_weight="55" />

    <LinearLayout
        style="@style/layoutwrapcontent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tosleft"
            style="@style/ftuelable"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tosright"
            style="@style/ftuelable"
            android:singleLine="true"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        style="@style/weightbyheight"
        android:layout_weight="35" />

</LinearLayout>