<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/dwfSliderButton"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:contentDescription="@string/dwfDriveTo"
        android:paddingLeft="30dp"
        android:src="@drawable/drive_with_friends_nav_icon_fold_unfocused" />

    <LinearLayout
        android:id="@+id/dwfSliderListWithEDot"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#ff484848"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/dwfSliderList"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:divider="#ff535759" >
        </ListView>

        <LinearLayout
            android:id="@+id/dwfSliderEmptyArea"
            android:layout_width="88dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="6dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="3dp" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/dwf_nav_dotted_line_repeat" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>