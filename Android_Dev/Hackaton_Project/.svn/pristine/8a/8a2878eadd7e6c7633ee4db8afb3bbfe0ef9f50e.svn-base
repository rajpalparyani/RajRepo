<?xml version="1.0" encoding="utf-8"?>

<com.telenav.searchwidget.android.CatchBackLineaLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:orientation="vertical" 
	android:background="#ffffff"
	android:padding="0dip">
	<TextView
		android:id="@+id/addrTitle"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:gravity="center"
		android:textSize="16dip"
		android:textStyle="bold"
		android:padding="0dip" 
		android:background="@color/titlebk">
	</TextView>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="55dip"
		android:orientation="vertical" 
		android:paddingLeft="0dip"
		android:paddingRight="0dip"
		android:paddingTop="0dip"
		android:paddingBottom="0dip" 
		android:background="@drawable/widgets_list_bg_1_unfocused">
		   <RelativeLayout
		       android:layout_width="fill_parent"
		       android:layout_height="fill_parent" 
		       android:layout_weight="1"
		       android:paddingLeft="0dip"
		       android:paddingTop="0dip"
		       android:paddingBottom="0dip"			
		       android:background="@xml/widget_onebox_bg"
		       android:clickable="false" >
		       <com.telenav.searchwidget.android.AndroidEditTextView
			       android:id="@+id/firstline"
		         android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:paddingLeft="9dip"
			       android:paddingRight="30dip"
			       android:paddingTop="0dip"
			       android:paddingBottom="0dip"
			       android:layout_marginLeft="9dip"
			       android:layout_marginRight="0dip"
			       android:layout_marginTop="9dip"
			       android:layout_marginBottom="9dip"
			       android:textSize="14dip"
			       android:singleLine="true"
			       android:gravity="left|center_vertical"
			       android:imeOptions="actionNext"
			       android:background="@xml/widget_onebox_bg"/>
		       <ImageView
		           android:id="@+id/firstline_cancel" 
		           android:layout_width="wrap_content" 
		           android:layout_height="fill_parent" 
		           android:paddingRight="10dip"
		           android:clickable="true" 
		           android:visibility="gone"
		           android:src="@drawable/widgets_clear_icon_unfocused" 
		           android:layout_alignParentTop="true"
		           android:layout_alignParentRight="true"/>
	      </RelativeLayout>		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="55dip"
		android:orientation="vertical" 
		android:paddingLeft="0dip"
		android:paddingRight="0dip"
		android:paddingTop="0dip"
		android:paddingBottom="0dip" 
		android:background="@drawable/widgets_list_bg_1_unfocused">
		<RelativeLayout
		       android:layout_width="fill_parent"
		       android:layout_height="fill_parent" 
		       android:layout_weight="1"
		       android:paddingLeft="0dip"
		       android:paddingTop="0dip"
		       android:paddingBottom="0dip"			
		       android:background="@xml/widget_onebox_bg"
		       android:clickable="false" >
		       <com.telenav.searchwidget.android.AndroidEditTextView
			       android:id="@+id/lastline"
		         android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:paddingLeft="9dip"
			       android:paddingRight="30dip"
			       android:paddingTop="0dip"
			       android:paddingBottom="0dip"
			       android:layout_marginLeft="9dip"
			       android:layout_marginRight="0dip"
			       android:layout_marginTop="9dip"
			       android:layout_marginBottom="9dip"
			       android:textSize="14dip"
			       android:singleLine="true"
			       android:gravity="left|center_vertical"
			       android:imeOptions="actionDone"
			       android:background="@xml/widget_onebox_bg"/>
		      <ImageView
		           android:id="@+id/lastline_cancel" 
		           android:layout_width="wrap_content" 
		           android:layout_height="fill_parent" 
		           android:paddingRight="10dip"
		           android:clickable="true" 
		           android:visibility="gone"
		           android:src="@drawable/widgets_clear_icon_unfocused" 
		           android:layout_alignParentTop="true"
		           android:layout_alignParentRight="true"/>
	     </RelativeLayout>		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="20dip"
		android:paddingLeft="50dip"
		android:paddingRight="50dip">
		<Button
			android:id="@+id/setup"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.4"
			android:textSize="16dip"
			android:textColor="@color/widget_setup_btn_text_color"
			android:background="@xml/widget_setup_btn_bg">
		</Button>
	</LinearLayout>
	
</com.telenav.searchwidget.android.CatchBackLineaLayout>
