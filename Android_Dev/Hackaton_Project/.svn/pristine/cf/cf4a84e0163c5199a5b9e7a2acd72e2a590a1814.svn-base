<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/etaWork" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:paddingLeft="6dip"
	android:paddingRight="6dip" 
	android:orientation="vertical"
	android:baselineAligned="false"
	android:clickable="true">
	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.45" 
		android:paddingLeft="2dip"
		android:paddingRight="0dip" 
		android:paddingTop="4dip"
		android:gravity="left"
		android:orientation="horizontal">
		<TextView 
			android:id="@+id/toStr" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:paddingRight="3dip"
			android:gravity="left|bottom"
			android:singleLine="true"
			android:inputType="none" 
			android:textSize="@dimen/text_size_small" 
			android:textStyle="bold"
			android:focusable="true" 
			android:textColor="@color/toColor"
			android:text="Time to Work">
		</TextView>
	</RelativeLayout>
	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.55" 
		android:paddingLeft="2dip"
		android:paddingBottom="0dip"
		android:gravity="left"
		android:orientation="horizontal">
	    <TextView 
			android:id="@+id/etaWorkHour" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="bottom" 
			android:singleLine="true" 
			android:inputType="none" 
			android:textSize="@dimen/text_size_big"
			android:textStyle="bold"
			android:textColor="@color/nearbyColor" 
			android:text="00">
		</TextView>
		<TextView 
			android:id="@+id/workHourStr" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/etaWorkHour" 
			android:paddingRight="4dip"
			android:paddingLeft="4dip"
			android:gravity="bottom" 
			android:singleLine="true"
			android:inputType="none" 
			android:textSize="@dimen/text_size_big"
			android:textStyle="bold"
			android:textColor="@color/nearbyColor" 
			android:text=":">
		</TextView>
		<TextView 
			android:id="@+id/etaWorkMin" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_toRightOf="@id/workHourStr" 
			android:layout_alignWithParentIfMissing="true"
			android:gravity="bottom" 
			android:singleLine="true"
			android:inputType="none" 
			android:textSize="@dimen/text_size_big" 
			android:textStyle="bold"
			android:textColor="@color/nearbyColor"
			android:text="00">
		</TextView>
	</RelativeLayout>	
</LinearLayout>
