package com.telenav.map.opengl.java.math;

/**
 *@author fqming (fqming@telenav.cn)
 *@date 2010-9-27
 */
public class Sign
{
    public static int sign(float i)
    {
        if (i > 0)
            return 1;
        if (i < 0)
            return -1;
        return 0;
    }
    
    public static int sign(int i)
    {
        if (i > 0)
            return 1;
        if (i < 0)
            return -1;
        return 0;
    }
    
    public static int sign(double i)
    {
        if (i > 0)
            return 1;
        if (i < 0)
            return -1;
        return 0;
    }
}
